{
  "manifest_version": 3,
  "name": "YT Nigerian Caption Translator",
  "version": "1.0.0",
  "description": "Translate YouTube captions locally using N-ATLaS (llama-server).",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Caption Translator"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}